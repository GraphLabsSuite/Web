<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>GraphLabs</h1>
            </div>
            <div id="logindisplay">
                <text>Здравствуйте, <strong>@((string)Session["Name"] + " " + (string)Session["Fathername"])</strong>!
                [ @Html.ActionLink("Выход", "Logoff", "Home") ]</text>
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("На главную", "Index", "Home")</li>
                    <li>@Html.ActionLink("Новости", "Index", "News")</li>
                    <li>@Html.ActionLink("Группы", "Index", "Group")</li>
                    <li>@Html.ActionLink("Пользователи", "Index", "User")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
