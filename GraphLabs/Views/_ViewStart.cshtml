@{
    int? UserID = (int?)Session["UserID"];
    switch (UserID)
    {
        case null:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        case 1:
            Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
            break;
        case 2:
            Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_LayoutStudent.cshtml";
            break;
    }
}