@model GraphLabs.Site.Models.UserIndex

<hgroup>
    <h3>Настройки отображения</h3>
    <br />
</hgroup>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>

        @Html.HiddenFor(model => model.Id)
        
        <section>
        <section class="smallLeftPanel">
        <div class="editor-label">
            Администраторы
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Admin)
        </div>
        </section>

        <section class="smallLeftPanel">
        <div class="editor-label">
            Преподаватели
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Teacher)
        </div>
        </section>

        <section class="smallLeftPanel">
        <div class="editor-label">
            Подтвержденные студенты
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VerStudent)
        </div>
        </section>

        <section class="smallLeftPanel">
        <div class="editor-label">
            Неподтвержденные студенты
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UnVerStudent)
        </div>
        </section>

        <section class="smallRightPanel">
        <div class="editor-label">
            Исключенные студенты
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DismissStudent)
        </div>
        </section>
        </section>

        <p>
        <input type="button" onclick="fillall(true)" value="Выбрать все" />

        <input type="button" onclick="fillall(false)" value="Снять выделение" />
        </p>

        <p>
            <input type="submit" value="Показать" />
        </p>
    </fieldset>
}