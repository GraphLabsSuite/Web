@model GraphLabs.Site.Models.LabWorkExecutionModel

@{
    ViewBag.Title = "Лабораторная работа";
}

<h2>@Model.LabName</h2>

<h5>@Model.Tasks[Model.CurrentTask].TaskName</h5>

<div>
    <object width="800" height="500" data="data:application/x-silverlight-2," type="application/x-silverlight-2" >
        <param name="source" value="/Content/SilverlightAppsProvider.ashx?kind=task&taskId=@Model.Tasks[Model.CurrentTask].TaskId" />
        <param name="onerror" value="onSilverlightError" />
        <param name="background" value="#E8EDEF" />
        <param name="minRuntimeVersion" value="2.0.31005.0" />
        <param name="autoUpgrade" value="true" />
        <param name="initParams" value="@Model.Tasks[Model.CurrentTask].InitParams" />
        <a href="http://go.microsoft.com/fwlink/?LinkID=124807" style="text-decoration: none;">
            <img src="http://go.microsoft.com/fwlink/?LinkId=108181" alt="Get Microsoft Silverlight" style="border-style: none" />
        </a>
    </object>
</div>


@for (int i = 0; i < Model.Tasks.Length; ++i)
{
    <input type="button" class="TaskNavigation" value="@(i+1)"
    @if (Model.Tasks[i].IsSolved || i == Model.CurrentTask)
    {
        @Html.Raw(" disabled ")
    }
    />
}

<div>
    Кнопка для дебага :D
    <input type="button" value="Выполнить" onclick="TaskComplete();"/>
</div>

@section scripts
{
    <script>
        $("input.TaskNavigation").click(function () {
            if (confirm("Будет потерян прогресс текущего задания! Продолжить?")) {
                var task = $(this).attr("value") - 1;
                location.href = "/LabWorkExecution/ChangeTask?&Task=" + task;
            }
        });

        function TaskComplete() {
            location.href = "/LabWorkExecution/TaskComplete";
        };
    </script>
}