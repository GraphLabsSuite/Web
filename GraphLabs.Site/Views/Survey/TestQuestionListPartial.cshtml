@model GraphLabs.Site.Models.TestQuestionListViewModel
<script>

    // функция для удаления работы из расписания
    function deleteQuestion(x) {
        console.log(typeof x, x);
        var del = confirm("Подтвердите удаление записи в расписании.");
        if (del) {
            var xhr = new XMLHttpRequest();
            var body = 'id=' + encodeURIComponent(x);
            xhr.open("POST", '/Survey/Delete/2', true);
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhr.onreadystatechange = () => {
                location.reload()
            }
            xhr.send(body);
            alert("Работа удалена из расписания");
        }
        return false;
    }
</script>
<table class="grid" width="60%">
    <thead class="grid-header">
        <tr>
            <th>
                №
            </th>
            <th>
                Вопрос
            </th>
            <th>
                Тема
            </th>
            <th>
                Подтема
            </th>
            <th>
                Верно ответили
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody class="grid-number-row">
        @foreach (var question in Model.Items)
        {
            <tr>
                <td>
                    @question.QuestionId
                </td>
                <td>
                    @question.Question
                </td>
                <td>
                    @question.QuestionCategory
                </td>
                <td>
                    @question.QuestionSubCategory
                </td>
                <td>
                </td>
                <td>
                    @Html.ActionLink("\u270E", "Edit", "Survey", new { QuestionId = @question.QuestionId }, new { style = "text-decoration:none" })
                </td>
                <td>
                    @Html.ActionLink("\u2716", "ViewQuestion", "Survey", new { QuestionId = @question.QuestionId }, new { style = "text-decoration:none" })
                </td>
            </tr>
        }
    </tbody>
</table>