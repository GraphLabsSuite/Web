@model GraphLabs.Site.Models.GroupModel

@{
    ViewBag.Title = "Редактирование группы";
}

<hgroup>
    <h2>Редактирование группы</h2>
    @Html.ActionLink("Обратно к списку", "Index")
</hgroup>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstYear)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstYear)
            @Html.ValidationMessageFor(model => model.FirstYear)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Number)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Number)
            @Html.ValidationMessageFor(model => model.Number)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsOpen)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsOpen)
            @Html.ValidationMessageFor(model => model.IsOpen)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<style type="text/css">
    .idColumn { width:10%; }
    .surnameColumn { width: 20%; }
    .nameColumn { width:20%; }
    .fatherNameColumn { width:20%; }
    .emailNameColumn { width:20%; }
    .isVerColumn { width:10%; }
</style>

@{
    var grid = new WebGrid(Model.Students, canPage:true ,canSort:true, rowsPerPage:10);
    grid.Pager(WebGridPagerModes.All);
        @grid.GetHtml(tableStyle: "webGrid", 
            headerStyle: "webgrid-header",
            footerStyle : "webgrid-footer",
            rowStyle: "webgrid-row",
            alternatingRowStyle: "webgrid-altrow",
            selectedRowStyle : "webgrid-selected-row",
            caption: null,
            displayHeader: true,
            htmlAttributes: new { id = "datatable" },
            
            columns: grid.Columns(
                grid.Column(header: "#",        format: item => item.Id,        columnName: "Id",       style:"idColumn"),
                grid.Column(header: "Фамилия",  format: item => item.Surname,   columnName: "Surname",  style:"surnameColumn"),
                grid.Column(header: "Имя",      format: item => item.Name,      columnName: "Name",     style:"nameColumn"),
                grid.Column(header: "Отчество", format: item => item.FatherName,    columnName: "FatherName",   style:"fatherNameColumn"),
                grid.Column(header: "E-mail",   format: item => item.Email,     columnName: "Email",    style:"emailColumn"),
                grid.Column(header: "Подтвержден",  format: item => item.IsVerified,    columnName: "IsVerified",   style:"isVerColumn")
                )
            );


}

<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function () {
            $('tbody tr').live('click', function () {
                location.href = '/User/Edit/' + $(this).find('td:first').text();
            });
        });
    </script>
}
