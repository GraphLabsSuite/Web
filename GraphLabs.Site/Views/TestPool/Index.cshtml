@using GraphLabs.Site.Models.TestPool
@model GraphLabs.Site.Models.TestPool.TestPoolListModel

@{
    ViewBag.Title = "Тесты";
}

<hgroup>
    <h2>Тесты</h2>
    @Html.ActionLink("+ Создать новый тест", "Create")
</hgroup>

