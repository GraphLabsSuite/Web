@model GraphLabs.Site.Models.Question.QuestionListModel

@{
    ViewBag.Title = "Вопросы ";
    var singleQuestion = @Model.Items.ToArray()[0];
}

<h2>@ViewBag.Title</h2>

<style type="text/css">
    .idColumn {
        width: 10%;
    }

    .nameColumn {
        width: 90%;
    }

    
</style>

<form method="post" action="some_url">
    <ul>
        @foreach (var group in @Model.Items.GroupBy(i => i.Category.Name))
        {
            <li>@group.Name</li>
            foreach (var item in @group)
            {
                <input type="checkbox" name="@item.Question" /> @item.Question
                <br />

            }
            <hr />
        }
    </ul>
    <input id="save" type="button" value="Сохранить" />
</form>




