@model GraphLabs.Site.Models.UserIndex

@{
    ViewBag.Title = "Список пользователей";
}

<h2>@ViewBag.Title.</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>

<style type="text/css">
    .idColumn { width:5%; }
    .nameColumn { width:33%; }
    .emailColumn { width:33%; }
    .isstudColumn { width:5%; }
    .groupColumn { width:19%; }
    .isverColumn { width:5%; }
</style>

@{
    var grid = new WebGrid(Model.Users, canPage:true ,canSort:true, rowsPerPage:10);
    grid.Pager(WebGridPagerModes.All);
        @grid.GetHtml(tableStyle: "webGrid", 
            headerStyle: "webgrid-header",
            footerStyle : "webgrid-footer",
            rowStyle: "webgrid-row",
            alternatingRowStyle: "webgrid-altrow",
            selectedRowStyle : "webgrid-selected-row",
            caption: null,
            displayHeader: true,
            htmlAttributes: new { id = "datatable" },
            
            columns: grid.Columns(
                grid.Column(header: "#",          format: item => item.Id,       columnName: "Id",       style:"idColumn"),
                grid.Column(header: "ФИО",   format: item => item.Name,     columnName: "Name",     style:"nameColumn"),
                grid.Column(header: "Email",   format: item => item.Email, columnName: "Sections", style:"emailColumn"),
                grid.Column(header: "Студент",     format: item => item.IsStudent,  columnName: "Version",  style:"isstudColumn;"),
                grid.Column(header: "Группа", format: item => item.Group,     columnName: "Note",     style:"groupColumn;"),
                grid.Column(header: "Подтверждение", format: item => item.IsVerified,     columnName: "Note",     style:"isverColumn;")
                )
            );


}
